---
/**
 * Trilby's Archive - A searchable archive of Yahtzee's wisdom
 * Clean parchment aesthetic matching the transcript pages
 */
import stats from "../data/stats.json";

const totalHours = Math.round(stats.totalDurationSeconds / 3600);

function formatNumber(n: number): string {
  if (n >= 1000000) {
    return `${(n / 1000000).toFixed(1)}M`;
  }
  if (n >= 1000) {
    return `${(n / 1000).toFixed(1)}K`;
  }
  return n.toLocaleString();
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Search through every Zero Punctuation and Fully Ramblomatic video transcript - a complete archive of gaming critique"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Trilby's Archive ‚Äî A Searchable Yahtzee Archive</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Special+Elite&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --zp-yellow: #f5c518;
        --zp-gold: #e5a500;
        --parchment: #faf6e9;
        --parchment-dark: #f0e9d2;
        --ink: #1a1612;
        --ink-light: #3d352d;
        --burgundy: #722f37;
      }

      * {
        box-sizing: border-box;
      }

      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0;
        font-family: "Libre Baskerville", Georgia, serif;
        background: var(--parchment);
        color: var(--ink);
        min-height: 100vh;
        line-height: 1.8;
      }

      .page-border {
        position: fixed;
        inset: 8px;
        border: 3px double var(--zp-gold);
        pointer-events: none;
        z-index: 100;
      }

      .container {
        max-width: 750px;
        margin: 0 auto;
        padding: 3rem 2rem 4rem;
      }

      /* Header */
      header {
        text-align: center;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        border-bottom: 2px solid var(--ink);
        position: relative;
      }

      header::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--ink);
      }

      .series-badge {
        font-family: "Special Elite", monospace;
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        background: var(--zp-yellow);
        color: var(--ink);
        padding: 0.3em 0.8em;
        display: inline-block;
        margin-bottom: 1rem;
      }

      h1 {
        font-family: "Playfair Display", serif;
        font-size: clamp(2.5rem, 8vw, 4rem);
        font-weight: 700;
        margin: 0;
        line-height: 1.1;
        color: var(--ink);
      }

      .tagline {
        font-family: "Libre Baskerville", serif;
        font-style: italic;
        font-size: 1rem;
        color: var(--ink-light);
        margin-top: 1rem;
      }

      .meta {
        font-family: "Special Elite", monospace;
        font-size: 0.75rem;
        color: var(--ink-light);
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
      }

      /* Search Section */
      .search-section {
        margin: 2.5rem 0;
      }

      .search-header {
        font-family: "Special Elite", monospace;
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--ink-light);
        text-align: center;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .search-header::before,
      .search-header::after {
        content: "";
        flex: 1;
        height: 1px;
        background: var(--zp-gold);
      }

      #search-input {
        width: 100%;
        font-family: "Libre Baskerville", Georgia, serif;
        font-size: 1.1rem;
        padding: 1rem 1.25rem;
        border: 2px solid var(--ink);
        background: var(--parchment);
        color: var(--ink);
        box-shadow: 3px 3px 0 var(--ink);
        transition: all 0.15s ease;
      }

      #search-input:focus {
        outline: none;
        transform: translate(-2px, -2px);
        box-shadow: 5px 5px 0 var(--ink);
      }

      #search-input::placeholder {
        font-style: italic;
        color: var(--ink-light);
      }

      .keyboard-hint {
        text-align: center;
        margin-top: 1rem;
        font-family: "Libre Baskerville", serif;
        font-size: 0.8rem;
        color: var(--ink-light);
        font-style: italic;
      }

      .keyboard-hint kbd {
        display: inline-block;
        padding: 0.2em 0.5em;
        background: var(--parchment-dark);
        border: 1px solid var(--ink);
        font-family: "Special Elite", monospace;
        font-style: normal;
        font-size: 0.85em;
      }

      /* Stats */
      .stats-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
        margin: 3.5rem 0 3rem;
        border: 2px solid var(--ink);
        box-shadow: 4px 4px 0 var(--ink);
        background: var(--parchment);
        position: relative;
        overflow: visible;
      }

      .stats-row::before {
        content: "By the Numbers";
        position: absolute;
        top: -0.75em;
        left: 50%;
        transform: translateX(-50%);
        background: var(--parchment);
        padding: 0 1rem;
        font-family: "Special Elite", monospace;
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--ink-light);
        z-index: 10;
      }

      .stat {
        text-align: center;
        padding: 1.75rem 1rem;
        position: relative;
        background: linear-gradient(
          180deg,
          var(--parchment-dark) 0%,
          var(--parchment) 100%
        );
      }

      .stat:not(:last-child)::after {
        content: "";
        position: absolute;
        right: 0;
        top: 20%;
        height: 60%;
        width: 1px;
        background: var(--ink);
      }

      .stat-icon {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        opacity: 0.6;
      }

      .stat-number {
        font-family: "Playfair Display", serif;
        font-size: clamp(2rem, 6vw, 3rem);
        font-weight: 700;
        color: var(--ink);
        line-height: 1;
        position: relative;
        display: inline-block;
      }

      .stat:first-child .stat-number::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--zp-yellow);
      }

      .stat-label {
        font-family: "Special Elite", monospace;
        font-size: 0.6rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--ink-light);
        margin-top: 0.75rem;
      }

      .stat-sublabel {
        font-family: "Libre Baskerville", serif;
        font-size: 0.7rem;
        font-style: italic;
        color: var(--ink-light);
        margin-top: 0.25rem;
        opacity: 0.7;
      }

      .stats-link {
        grid-column: 1 / -1;
        display: block;
        text-align: center;
        padding: 0.75rem 1.5rem;
        font-family: "Special Elite", monospace;
        font-size: 0.7rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--ink);
        background: var(--zp-yellow);
        border-top: 1px solid var(--ink);
        text-decoration: none;
        transition: background 0.15s ease;
      }

      .stats-link:hover {
        background: #ffda4a;
      }

      /* Footer */
      footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--zp-gold);
        text-align: center;
        font-size: 0.85rem;
        color: var(--ink-light);
      }

      footer p {
        margin: 0.5rem 0;
      }

      footer a {
        color: var(--burgundy);
        text-decoration: none;
        border-bottom: 1px dotted var(--burgundy);
      }

      footer a:hover {
        border-bottom-style: solid;
      }

      .colophon {
        font-style: italic;
        font-size: 0.75rem;
        margin-top: 1.5rem;
        opacity: 0.7;
      }

      /* Responsive */
      @media (max-width: 640px) {
        .container {
          padding: 2rem 1.5rem;
        }

        .page-border {
          display: none;
        }

        .meta {
          flex-direction: column;
          gap: 1rem;
        }

        .stats-row {
          grid-template-columns: 1fr;
          box-shadow: 3px 3px 0 var(--ink);
        }

        .stat {
          padding: 1.25rem 1rem;
        }

        .stat:not(:last-child)::after {
          right: 20%;
          top: auto;
          bottom: 0;
          height: 1px;
          width: 60%;
        }
      }

      /* Animations */
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      header {
        animation: fadeIn 0.6s ease-out;
      }

      .search-section {
        animation: fadeIn 0.6s ease-out 0.1s backwards;
      }

      .stats-row {
        animation: fadeIn 0.6s ease-out 0.2s backwards;
      }

      footer {
        animation: fadeIn 0.6s ease-out 0.3s backwards;
      }
    </style>

    <!-- Global styles for dynamically injected search results -->
    <style is:global>
      #search-results {
        max-width: 100%;
        margin: 1.5rem 0 0;
      }

      .search-status {
        text-align: center;
        font-family: "Libre Baskerville", serif;
        font-size: 0.85rem;
        font-style: italic;
        color: var(--ink-light);
        margin-bottom: 1.25rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--zp-gold);
      }

      .search-result {
        background: var(--parchment);
        margin-bottom: 1.25rem;
        border: 2px solid var(--ink);
        box-shadow: 3px 3px 0 var(--ink);
      }

      .result-header {
        padding: 1rem 1.25rem 0.75rem;
        border-bottom: 1px solid var(--ink);
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        gap: 1rem;
        background: var(--parchment-dark);
      }

      .result-title {
        font-family: "Playfair Display", serif;
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--ink);
        margin: 0;
        line-height: 1.3;
      }

      .result-series {
        font-family: "Special Elite", monospace;
        font-size: 0.55rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--ink);
        background: var(--zp-yellow);
        padding: 0.3em 0.6em;
