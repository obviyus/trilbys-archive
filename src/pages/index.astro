    </div>

    <script is:inline>
      // Cache for fetched caption data
      const captionCache = new Map();
      let pagefind = null;
      let searchTimeout = null;

      // Format timestamp for display
      function formatTimestamp(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = Math.floor(seconds % 60);
        return `${mins}:${secs.toString().padStart(2, "0")}`;
      }

      // Fetch captions for a video
      async function fetchCaptions(videoId) {
        if (captionCache.has(videoId)) {
          return captionCache.get(videoId);
        }
        try {
          const res = await fetch(`/captions/${videoId}.json`);
          if (!res.ok) return null;
          const data = await res.json();
          captionCache.set(videoId, data);
          return data;
        } catch {
          return null;
        }
      }

      // Find captions that match the search query
      function findMatchingCaptions(captions, query) {
        const queryLower = query.toLowerCase();
        const words = queryLower.split(/\s+/).filter(w => w.length > 2);

        // Score each caption by how many query words it contains
        const scored = captions.map((cap, idx) => {
          const textLower = cap[0].toLowerCase();
          let score = 0;
          for (const word of words) {
            if (textLower.includes(word)) score++;
          }
          // Exact phrase match gets bonus
          if (textLower.includes(queryLower)) score += 10;
          return { cap, idx, score };
        });

        // Find the best matching region
        const matches = scored.filter(s => s.score > 0);
        if (matches.length === 0) return null;

        // Sort by score and get the best match
        matches.sort((a, b) => b.score - a.score);
        const bestIdx = matches[0].idx;

        // Return a window of captions around the best match
        const start = Math.max(0, bestIdx - 2);
        const end = Math.min(captions.length, bestIdx + 5);

        return {
          captions: captions.slice(start, end),
          matchIndices: matches.map(m => m.idx - start).filter(i => i >= 0 && i < end - start)
        };
      }

      // Highlight search terms in text
      function highlightText(text, query) {
        const words = query.toLowerCase().split(/\s+/).filter(w => w.length > 2);
        if (words.length === 0) return text;

        // Escape regex special chars and build pattern
        const escaped = words.map(w => w.replace(/[.*+?^${}()|[\]\\]/g, '\\$&'));
        const pattern = new RegExp(`(${escaped.join('|')})`, 'gi');

        return text.replace(pattern, '<span class="highlight-match">$1</span>');
      }

      // Render a single search result
      function renderResult(videoId, captionData, query) {
        const matchData = findMatchingCaptions(captionData.captions, query);
        if (!matchData) return null;

        const { captions } = matchData;

        // Build caption HTML with timestamp links - simple inline style like transcript page
        const captionsHtml = captions.map((cap) => {
          const [text, offset] = cap;
          const url = `https://youtu.be/${videoId}?t=${offset}`;
          const title = `Jump to ${formatTimestamp(offset)}`;
          const highlighted = highlightText(text, query);
          return `<a href="${url}" target="_blank" rel="noopener" class="caption-segment" title="${title}">${highlighted}</a>`;
        }).join(" ");

        return `
          <article class="search-result">
            <header class="result-header">
              <h3 class="result-title">${captionData.title}</h3>
              <span class="result-series">${captionData.series}</span>
            </header>
            <div class="result-captions">${captionsHtml}</div>
            <footer class="result-footer">
              <span>Hover to highlight, click to jump to timestamp</span>
              <a href="/transcript/${videoId}">View full transcript ‚Üí</a>
            </footer>
          </article>
        `;
      }

      // Perform search
      async function performSearch(query) {
        const resultsEl = document.getElementById("search-results");

        if (!query || query.length < 2) {
          resultsEl.innerHTML = "";
          return;
        }

        // Show loading state
        resultsEl.innerHTML = '<div class="loading">Searching the archives...</div>';

        try {
          // Initialize Pagefind if needed
          if (!pagefind) {
            pagefind = await import("/pagefind/pagefind.js");
            await pagefind.init();
          }

          // Search
          const search = await pagefind.search(query);

          if (search.results.length === 0) {
            resultsEl.innerHTML = `
              <div class="no-results">
                <div class="no-results-icon">üìú</div>
                <p class="no-results-text">Alas, the archives contain no such wisdom.</p>
              </div>
            `;
            return;
          }

          // Get first 10 results
          const results = await Promise.all(
            search.results.slice(0, 10).map(r => r.data())
          );

          // Fetch captions and render results
          const rendered = [];
          for (const result of results) {
            const videoId = result.meta?.videoId;
            if (!videoId) continue;

            const captionData = await fetchCaptions(videoId);
            if (!captionData) continue;

            const html = renderResult(videoId, captionData, query);
            if (html) rendered.push(html);
          }

          if (rendered.length === 0) {
            resultsEl.innerHTML = `
              <div class="no-results">
                <div class="no-results-icon">üîç</div>
                <p class="no-results-text">No matching transcripts found.</p>
              </div>
            `;
            return;
          }

          resultsEl.innerHTML = `
            <div class="search-status">${search.results.length} results for "${query}"</div>
            <div class="results-list">
              ${rendered.join("")}
            </div>
          `;
        } catch (err) {
          console.error("Search error:", err);
          resultsEl.innerHTML = '<div class="search-status">An error occurred while searching.</div>';
        }
      }

      // Initialize
      document.addEventListener("DOMContentLoaded", () => {
        const input = document.getElementById("search-input");

        // Debounced search on input
        input.addEventListener("input", (e) => {
          clearTimeout(searchTimeout);
          searchTimeout = setTimeout(() => {
            performSearch(e.target.value.trim());
          }, 300);
        });

        // Keyboard shortcut
        document.addEventListener("keydown", (e) => {
          if (
            e.key === "/" &&
            !["INPUT", "TEXTAREA"].includes(document.activeElement?.tagName)
          ) {
            e.preventDefault();
            input.focus();
          }
        });
      });
