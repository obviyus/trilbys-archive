{
  "name": "trilbys-archive",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:setup": "bun run build && cp -r dist/pagefind public/",
    "build:pages": "bun run scripts/build-search-index.ts",
    "build:captions": "bun run scripts/build-captions-index.ts",
    "build:stats": "bun run scripts/build-stats.ts",
    "build:astro": "astro build",
    "build:pagefind": "pagefind --site dist",
    "build": "bun run build:pages && bun run build:captions && bun run build:stats && bun run build:astro && bun run build:pagefind",
    "preview": "astro preview",
    "astro": "astro",
    "captions": "bun run scripts/grab-captions.ts",
    "transcribe": "bun run scripts/transcribe-fallback.ts"
  },
  "dependencies": {
    "@danielxceron/youtube-transcript": "^1.2.3",
    "astro": "^5.16.5",
    "groq-sdk": "^0.37.0",
    "p-limit": "^7.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "pagefind": "^1.4.0"
  }
}